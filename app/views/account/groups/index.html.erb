<div class="span12">
  <h2> My Groups </h2>

  <table class="table">
    <thead>
      <tr>
        <td> # </td>
        <td> Title </td>
        <td> Description </td>
        <td> Post Count </td>
        <td> Last Update </td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(group.title, group_path(group))  %> </td>
        <td> <%= group.description %> </td>
        <td> <%= group.posts.count %> </td>
        <td> <%= group.updated_at.to_s(:long) %> </td>
        <td> 
          <% if group.editable_by?(current_user) %>

          <%= link_to("Delete", group_path(group), :class => "btn btn-mini btn-primary", :method => :delete, :confirm => "Are you sure? ") %>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>