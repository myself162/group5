<div class="span12">
 
  <% if current_user %>
    <div class="group pull-right">
      <% if current_user.is_member_of?(@group) %>
        <%= link_to("Quit Group", quit_group_path(@group), :method => :post, :class => "btn btn-mini") %>
      <% else %>
        <%= link_to("Join Group", join_group_path(@group), :method => :post, :class => "btn btn-mini") %>
      <% end %>
    </div>
  <% end %>



  <div class="group pull-right">
      <%= render_edit_post_button(@group) %>
      <%= render_new_post_button(@group) %>
  </div>



  <h2> <%= @group.title %> </h2>
  <p> <%= @group.description %> </p>

  <table class="table">
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <span class="author">
          <strong> Author : <%= post.author.name %> </strong>
        </span>
       <p> <%= render_post_content(post) %> </p> 
     </td>
    <% if current_user && post.editable_by?(current_user) %>
      <td>
        <% if current_user.is_member_of?(@group) %>
        <%= link_to("Edit", edit_group_post_path(post.group, post), :class => "btn btn-mini") %> 
        <%= link_to("Delete", group_post_path(post.group, post), :class => "btn btn-mini btn-primary", :method => :delete, :confirm => "Are you sure?") %>
        <% end %>

      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>

  </table>

</div>